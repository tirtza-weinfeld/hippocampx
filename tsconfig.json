{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/styles-bleeding/*": [
        "./styles-bleeding/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/plugins/*": [
        "./plugins/*"
      ],
      "@/backend/*": [
        "backend/*"
      ],
      "@/public/*": [
        "./public/*"
      ]
    }
  },
  "include": [
    // ".claude/**/*.tsx",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts",
    "**/*.mjs",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".claude"
  ]
}
